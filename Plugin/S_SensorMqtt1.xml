<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Connected</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>connected</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>WatchCount</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>watch</shortCode>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_String</name>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
	<actionList>
		<action>
			<name>Subscribe</name>
			<argumentList>
				<argument>
					<name>topics</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_String</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>Unsubscribe</name>
			<argumentList>
				<argument>
					<name>topics</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_String</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>Publish</name>
			<argumentList>
				<argument>
					<name>topic</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_String</relatedStateVariable>
				</argument>
				<argument>
					<name>payload</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_String</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>
